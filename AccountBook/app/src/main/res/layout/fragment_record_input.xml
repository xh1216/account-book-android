<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_edges">
    <ToggleButton
        android:id="@+id/toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:width="180dp"
        android:height="10dp"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/toggle_button_background" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/colorAccent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:text="@string/input_date_label" />
        <EditText
            android:id="@+id/date_field"
            style="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:focusable="false" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/colorAccent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:text="@string/input_amount_label" />
        <EditText
            android:id="@+id/amount_field"
            style="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:inputType="number"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/colorAccent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:text="@string/input_category_label" />
        <EditText
            android:id="@+id/category_field"
            style="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:focusable="false"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:text="@string/input_memo_label" />
        <EditText
            android:id="@+id/memo_field"
            style="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/colorAccent"/>

    <Button
        android:id="@+id/confirm_button"
        style="@style/TextAppearance.AppCompat.Body2"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:text="Add Record"/>
    <Button
        android:id="@+id/remove_button"
        style="@style/TextAppearance.AppCompat.Body2"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:text="Remove Record" />
</LinearLayout>